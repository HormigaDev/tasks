
<div id="main">
    <h1 id="m-title"><%if(component=='s-search'){%>Search<%}%> Tasks</h1>
    <%if(component=='s-search'){%>
        <div id="search-group">
            <input type="text" id="search-input" placeholder="Search a task" autofocus>
        </div>
    <%}%>
    <%if(data.tasks.length<1) {%>
    <h2 id="nada">Nothing to show here.</h2>
    <%}%>
    <div id="search-tasks">
        <%for (let task of data.tasks){%>
            <a href="/task?id=<%=task.id%>" class="search-task">
                <img src="assets/nota.png" alt="image" class="task-image">
                <img class="task-icon" src="assets/thumbtack.png"></img>
                <h3 class="task-title"><%=task.title%></h3>
                <p class="task-date"><%=task.date%></p>
            </a>
        <%}%>
    </div>
</div>