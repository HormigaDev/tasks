<link rel="stylesheet" href="css/components/ModalAffairs.css">

<div id="modal-affairs">
  <div id="modal-affair-container">
    <div class="form-group">
      <label for="form-affair-title"><%=$t.pages.affairs.formtitle%> *</label>
      <input type="text" maxlength="50" name="form-affair-title" aff-id="title" id="form-affair-title" placeholder="<%=$t.titles.affair_example%>">
    </div>
    <div class="form-group">
      <label for="form-affair-description"><%=$t.pages.affairs.formdescription%> *</label>
      <textarea name="form-affair-description" id="form-affair-description" aff-id="description" maxlength="<%-configs.affair_description_limit??2500%>" placeholder="<%=$t.pages.affairs.description_example%>"></textarea>
    </div>
    <div class="form-group">
      <label for="form-person-name"><%=$t.pages.affairs.formperson%> *</label>
      <input type="text" name="form-person-name" id="form-person-name" aff-id="person" placeholder="<%=$t.pages.affairs.person_example%>">
    </div>
    <div class="form-group">
      <label for="form-person-phone"><%=$t.pages.affairs.formphone%> *</label>
      <input type="tel" pattern="\([0-9]{2}\) [0-9]{4,5}-[0-9]{4}" aff-id="phone" placeholder="(xx) xxxx-xxxx" name="form-person-phone" id="form-person-phone">
    </div>
    <hr>
    <div class="form-group form-group-buttons">
      <div class="btn btn-cancel" id="cancel-affair-btn"><%=$t.buttons.cancel%></div>
      <div class="btn" id="save-affair-btn"><%=$t.buttons.save%></div>
    </div>
  </div>
</div>