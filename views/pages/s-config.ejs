
<link rel="stylesheet" type="text/css" href="css/config.css">
<div id="main">
  <h1 id="m-title"><%=$t.pages.config.title%></h1>

  <div id="configs-container">
    <div class="config-section" id="config-section-first">
      <div class="config-group">
        <div class="config-title"><%=$t.pages.config.language%></div>
        <select name="language" class="configuration" id="language-select">
          <option value="en"<%if($t.lang === 'en'){%>selected<%}%>><%=$t.pages.config.english%></option>
          <option value="es"<%if($t.lang === 'es'){%>selected<%}%>><%=$t.pages.config.spanish%></option>
          <option value="pt"<%if($t.lang === 'pt'){%>selected<%}%>><%=$t.pages.config.portuguese%></option>
        </select>
      </div>
    </div>
    <div class="config-section">
      <div class="config-group">
        <div class="config-title"><%=$t.pages.config.descriptionLimit%></div>
        <input type="number" name="descriptionLimit" class="configuration" id="descriptionLimit" value="<%=configs.descriptionLimit??2500%>">
      </div>
      <div class="config-group">
        <div class="config-title"><%=$t.pages.config.affair_description_limit%></div>
        <input type="number" name="affair_description_limit" class="configuration" id="affair_description_limit" value="<%=configs.affair_description_limit??2500%>">
      </div>
    </div>
    <div class="config-section">
      <div class="config-title"><%=$t.titles.modules%></div>
      <div class="config-group">
        <%- include("../components/Toggle", { toggle_text: $t.pages.config.use_affairs, toggle_id: 'use_affairs', defaultValue: configs.use_affairs }) %>
      </div>
      <div class="config-title"><%=$t.titles.other_configs%></div>
      <div class="config-group">
        <%- include("../components/Toggle", { toggle_text: $t.pages.config.showMenuTitles, toggle_id: 'showMenuTitles', defaultValue: configs.showMenuTitles??false }) %>
      </div>
    </div>
    
  </div>
  <div class="config-save-section">
    <button id="save-config" class="save-button btn"><%=$t.buttons.save%></button>
  </div>

</div>